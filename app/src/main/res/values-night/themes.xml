<resources>
    <!-- Base application theme. -->
    <style name="Theme.tjEnterprises.phase10Counter" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_blue</item>
        <item name="colorPrimaryVariant">@color/light_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/bright_light_grey</item>
        <item name="android:statusBarColor">@color/light_blue</item>
    </style>

    <style name="settingsButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:backgroundTint">@color/light_blue</item>
    </style>

    <style name="AlertDialog.AppCompat.phase10Counter" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:background">#1c1c1c</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowElevation">0dp</item>
    </style>

    <style name="Widget.Material3.CompoundButton.CheckBox.phase10Counter" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="colorControlActivated">@color/light_blue</item>
        <item name="colorControlNormal">@color/light_blue</item>
        <item name="colorOnSurfaceVariant">@color/light_blue</item>
    </style>

</resources>